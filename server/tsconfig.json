{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./api/types", "./node_modules/@types"],
    "types": ["node", "express"],
    "outDir": "./dist"
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}
